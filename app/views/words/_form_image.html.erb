<%= form_for @word, html: { multipart: true } do |f| %>
  <% if @word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul>
      <% @word.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.file_field :image %>
  <%= f.text_field :image_title, label: false, placeholder: "Titre de l'illustration" %>
  <%= f.text_area :image_description, label: false, placeholder: "Description de l'illustration" %>
  <%= f.text_field :image_url, label: false, placeholder: "Lien externe" %>

  <div class="center-align">
        <%= f.submit "Ajouter cette illustration", class: "waves-effect waves-light btn right" %>
    </div>

<% end %>