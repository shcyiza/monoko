<p id="notice"><%= notice %></p>

<h1>Listing Definition Translations</h1>

<table>
  <thead>
    <tr>
      <th>Definition</th>
      <th>Word</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @definition_translations.each do |definition_translation| %>
      <tr>
        <td><%= definition_translation.definition_id %></td>
        <td><%= definition_translation.word_id %></td>
        <td><%= link_to 'Show', definition_translation %></td>
        <td><%= link_to 'Edit', edit_definition_translation_path(definition_translation) %></td>
        <td><%= link_to 'Destroy', definition_translation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

